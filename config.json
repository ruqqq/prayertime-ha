{
  "name": "PrayerTime HA",
  "version": "2",
  "slug": "prayertime-ha",
  "description": "Emits HA event ('prayertime') on prayer time and on configurable reminder offset",
  "arch": ["armv7"],
  "image": "ruqqq/prayertime-ha-{arch}",
  "startup": "application",
  "boot": "auto",
  "host_network": true,
  "audio": false,
  "homeassistant_api": true,
  "init": false,
  "options": {
    "reminder_offset": -10,
    "location_code": "SG"
  },
  "schema": {
    "reminder_offset": "int",
    "location_code": "str"
  }
}
